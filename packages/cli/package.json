{
  "name": "@mockoon/cli",
  "description": "Mockoon's CLI. Deploy your mock APIs anywhere.",
  "version": "4.1.0",
  "author": {
    "name": "Guillaume Monnet",
    "email": "guillaume@1kb.software",
    "url": "https://1kb.software/"
  },
  "bin": {
    "mockoon-cli": "./bin/run"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .js,.ts .",
    "test": "ts-mocha -p ./tsconfig-build.json --timeout 40000 --forbid-only test/**/*.spec.ts",
    "build": "rm -rf dist && tsc -b tsconfig-build.json && oclif manifest"
  },
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/bin",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "oclif": {
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init"
    },
    "bin": "mockoon-cli",
    "dirname": "cli",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "repository": "https://github.com/mockoon/mockoon",
  "homepage": "https://mockoon.com",
  "bugs": {
    "url": "https://github.com/mockoon/mockoon/issues"
  },
  "funding": "https://mockoon.com/sponsor-us/",
  "dependencies": {
    "@mockoon/commons": "4.1.0",
    "@mockoon/commons-server": "4.1.0",
    "@oclif/core": "2.9.4",
    "@oclif/plugin-help": "5.2.14",
    "jsonfile": "6.1.0",
    "mkdirp": "3.0.1",
    "mustache": "4.2.0",
    "tslib": "2.6.0"
  },
  "devDependencies": {
    "@oclif/test": "2.3.33",
    "@types/chai": "4.3.5",
    "@types/jsonfile": "6.1.1",
    "@types/mocha": "10.0.1",
    "@types/mustache": "4.2.2",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "chai": "4.3.7",
    "eslint": "8.45.0",
    "eslint-config-oclif": "4.0.0",
    "eslint-config-oclif-typescript": "1.0.3",
    "eslint-plugin-jsdoc": "46.4.4",
    "mocha": "10.2.0",
    "oclif": "3.10.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
