# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = lf

[*.{html,js,ts,json}]
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
